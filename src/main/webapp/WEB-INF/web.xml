<?xml version="1.0" encoding="UTF-8"?>

<web-app  xmlns="http://xmlns.jcp.org/xml/ns/javaee"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaeehttp://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
          version="3.1">
       
         <servlet>
         <servlet-name>login</servlet-name>
         <servlet-class>com.customer.LoginServlet</servlet-class>
         </servlet>
         
         <servlet-mapping>
         <servlet-name>login</servlet-name>
         <url-pattern>/log</url-pattern>
         </servlet-mapping>
         
         
         
         <servlet>
         <servlet-name>AdminSignup</servlet-name>
         <servlet-class>com.customer.AdminSignupServlet</servlet-class>
         </servlet>
         
         <servlet-mapping>
         <servlet-name>AdminSignup</servlet-name>
         <url-pattern> /AdminSignup</url-pattern>
         </servlet-mapping>
         
         
         <servlet>
         <servlet-name>addPackage</servlet-name>
         <servlet-class>com.customer.AddPackagesServlet</servlet-class>
         </servlet>
         
      	<servlet-mapping>
         <servlet-name>addPackage</servlet-name>
         <url-pattern> /addPackages</url-pattern>
         </servlet-mapping>
         
         
         
         
         
         
         
         
         <servlet>
         <servlet-name>editProfile</servlet-name>
         <servlet-class>com.customer.EditProfileServlet</servlet-class>
         </servlet>
       
         <servlet-mapping>
         <servlet-name>editProfile</servlet-name>
         <url-pattern>/edit</url-pattern>
         </servlet-mapping>
         
         
      
         
         <servlet>
         <servlet-name>ViewPackage</servlet-name>
         <servlet-class>com.customer.ViewPackageServlet</servlet-class>
         </servlet>
         
         <servlet-mapping>
         <servlet-name>ViewPackage</servlet-name>
         <url-pattern>/view</url-pattern>
         </servlet-mapping>
         
         
         <servlet>
         <servlet-name>UpdatePackage</servlet-name>
         <servlet-class>com.customer.UpdatePackageServlet</servlet-class>
         </servlet>
         
         <servlet-mapping>
         <servlet-name>UpdatePackage</servlet-name>
         <url-pattern>/pack</url-pattern>
         </servlet-mapping>
         
         
         
         <servlet>
         <servlet-name>DeleteAdmin</servlet-name>
         <servlet-class>com.customer.DeleteAdminServlet</servlet-class>
         </servlet>
         
         <servlet-mapping>
         <servlet-name>DeleteAdmin</servlet-name>
         <url-pattern>/delete</url-pattern>
         </servlet-mapping>
         
         
         
         <servlet>
         <servlet-name>DeletePackage</servlet-name>
         <servlet-class>com.customer.DeletePackageServlet</servlet-class>
         </servlet>
         
         <servlet-mapping>
         <servlet-name>DeletePackage</servlet-name>
         <url-pattern>/deletepack</url-pattern>
         </servlet-mapping>
         
         
         
</web-app>